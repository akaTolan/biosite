name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # ou a branch principal onde seu código está

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      # Passo 1: Fazer checkout do seu código
      - name: Check out repository
        uses: actions/checkout@v3

      # (Opcional) Passo 2: Se você precisar de build (por exemplo, se tiver bundler, minificador, etc.)
      # Se for só HTML, CSS e JS puro, pode pular o build.
      #
      # - name: Install dependencies
      #   run: npm install
      #
      # - name: Build
      #   run: npm run build
      #
      # (ou qualquer comando que você use para compilar ou minificar)

      # Passo 3: Deploy para o GitHub Pages
      - name: Deploy
        uses: peaceiris/actions-gh-pages@v3
        with:
          github_token: ${{ secrets.GITHUB_TOKEN }}
          publish_dir: ./  # A pasta que contém seus arquivos estáticos
          # Caso você faça build, mude para o diretório de saída ex: "./dist"